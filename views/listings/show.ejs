<%layout("/layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
    <h3>Listing Details </h3>
    </div>
    <div class="card col-6 offset-3">
        <img src="<%=L.image%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b><%= L.title%></b><br><br>
            <%= L.description %><br>
        &#8377;<%= L.price.toLocaleString("en-IN") %><br>
        <%= L.location %><br>
        <%= L.country %><br>
        </p>
        </div>
    </div>
    <div class="btns">
    <a href="/listings/<%=L._id%>/edit" class="btn add-btn btn-dark col-1 offset-3">Edit </a>
    <form method="post" action="/listing/<%= L._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete </button>
    </form>
    </div></div>
</body>
